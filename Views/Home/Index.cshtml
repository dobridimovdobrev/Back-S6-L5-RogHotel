@model RogHotel.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-1">Panoramica</h2>
    <div class="d-flex gap-2">
        <a asp-controller="Prenotazione" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Nuova Prenotazione
        </a>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- arrivi  -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Arrivi Oggi</h6>
                <h3 class="fw-bold mb-3">@Model.ArriviOggi</h3>
                <small class="text-muted mt-2 d-block">Check-in previsti per oggi</small>
            </div>
        </div>
    </div>

    <!-- partenze -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-box-arrow-right"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Partenze Oggi</h6>
                <h3 class="fw-bold mb-3">@Model.PartenzeOggi</h3>
                <small class="text-muted mt-2 d-block">Check-out previsti per oggi</small>
            </div>
        </div>
    </div>

    <!-- camere disponibili  -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon" style="background-color: rgba(111, 66, 193, 0.1); color: #6f42c1;">
                        <i class="bi bi-door-open"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Camere Disponibili</h6>
                <h3 class="fw-bold mb-3">@Model.CamereDisponibili</h3>
                @{
                    var percentualeDisponibili = Model.CamereTotali > 0
                    ? (Model.CamereDisponibili * 100 / Model.CamereTotali)
                    : 0;
                }
                <small class="text-muted mt-2 d-block">Su @Model.CamereTotali totali</small>
            </div>
        </div>
    </div>

    <!-- clienti -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Clienti Totali</h6>
                <h3 class="fw-bold mb-3">@Model.TotaleClienti</h3>
                <small class="text-muted mt-2 d-block">Nel database</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Prossimi Arrivi-->
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 fw-bold">Prossimi Arrivi</h5>
                <a asp-controller="Prenotazione" asp-action="Index" class="btn btn-sm btn-link">Vedi tutti</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">Ospite</th>
                                <th class="px-4 py-3">Camera</th>
                                <th class="px-4 py-3">Numero</th>
                                <th class="px-4 py-3">Check-in</th>
                                <th class="px-4 py-3">Check-out</th>
                                <th class="px-4 py-3">Stato</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProssimiArrivi.Any())
                            {
                                @foreach (var prenotazione in Model.ProssimiArrivi)
                                {
                                    <tr>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                    <small class="fw-bold">@(prenotazione.Cliente?.Nome?.Substring(0, 1))@(prenotazione.Cliente?.Cognome?.Substring(0, 1))</small>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@prenotazione.Cliente?.Nome @prenotazione.Cliente?.Cognome</div>
                                                    <small class="text-muted">@prenotazione.Cliente?.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">@prenotazione.Camera?.Tipo</td>
                                        <td class="px-4 py-3">@prenotazione.Camera?.Numero</td>
                                        <td class="px-4 py-3">@prenotazione.DataInizio.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="px-4 py-3">@prenotazione.DataFine.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-success">@prenotazione.Stato</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                                        Nessun arrivo previsto
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>