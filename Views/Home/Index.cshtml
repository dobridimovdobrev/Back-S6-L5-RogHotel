@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-1">Panoramica</h2>
    <div class="d-flex gap-2">
        <a asp-controller="Prenotazione" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Nuova Prenotazione
        </a>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- arrivi -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Arrivi Oggi</h6>
                <h3 class="fw-bold mb-3">24</h3>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-primary" style="width: 65%"></div>
                </div>
                <small class="text-muted mt-2 d-block">15 Check-in completati</small>
            </div>
        </div>
    </div>

    <!-- partenze -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-box-arrow-right"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Partenze Oggi</h6>
                <h3 class="fw-bold mb-3">18</h3>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-warning" style="width: 80%"></div>
                </div>
                <small class="text-muted mt-2 d-block">3 In ritardo</small>
            </div>
        </div>
    </div>

    <!-- disponibilita camere -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon" style="background-color: rgba(111, 66, 193, 0.1); color: #6f42c1;">
                        <i class="bi bi-door-open"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Camere Disponibili</h6>
                <h3 class="fw-bold mb-3">45</h3>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar" style="width: 40%; background-color: #6f42c1;"></div>
                </div>
                <small class="text-muted mt-2 d-block">Su 120 totali</small>
            </div>
        </div>
    </div>

    <!-- stato camere -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
                <h6 class="text-muted mb-1">Stato Pulizie</h6>
                <h3 class="fw-bold mb-3">102</h3>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: 92%"></div>
                </div>
                <small class="text-muted mt-2 d-block">Camere pronte</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Prossimi Arrivi -->
    <div class="col-lg-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 fw-bold">Prossimi Arrivi</h5>
                <a asp-controller="Prenotazione" asp-action="Index" class="btn btn-sm btn-link">Vedi tutti</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">Ospite</th>
                                <th class="px-4 py-3">Camera</th>
                                <th class="px-4 py-3">Check-in</th>
                                <th class="px-4 py-3">Stato</th>
                                <th class="px-4 py-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <small class="fw-bold">LB</small>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">Luca Bianchi</div>
                                            <small class="text-muted">REF-00123</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">Deluxe (104)</td>
                                <td class="px-4 py-3">Oggi, 14:00</td>
                                <td class="px-4 py-3">
                                    <span class="badge bg-warning">In Attesa</span>
                                </td>
                                <td class="px-4 py-3">
                                    <button class="btn btn-sm btn-link text-muted">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>