@model RogHotel.Models.Dto.RegisterRequest
@{
    ViewData["Title"] = "Registrazione";
    Layout = "_LayoutLoginRegister";
}

<div class="login-container">
    <div class="row g-0 h-100">

        <div class="col-md-6 d-flex align-items-center justify-content-center bg-white">
            <div class="login-form-wrapper">

                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-building text-primary fs-3 me-2"></i>
                        <span class="text-muted">Hotel Management System</span>
                    </div>
                    <h2 class="fw-bold mb-2">Registrazione</h2>
                    <p class="text-muted">Crea un nuovo account per accedere al RogHotel.</p>
                </div>

                <form asp-controller="ApplicationUser" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Nome e Cognome -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Nome" class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i> Nome
                            </label>
                            <input asp-for="Nome" class="form-control" placeholder="Mario" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cognome" class="form-label fw-semibold">Cognome</label>
                            <input asp-for="Cognome" class="form-control" placeholder="Rossi" />
                            <span asp-validation-for="Cognome" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope me-1"></i> Email Aziendale
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="nome.cognome@hotel.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">
                            <i class="bi bi-lock me-1"></i> Password
                        </label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <small class="text-muted">Minimo 8 caratteri, una maiuscola</small>
                    </div>

                    <!-- Conferma Password -->
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                            Conferma Password
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Bottone Registrati -->
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                        Registrati <i class="bi bi-arrow-right ms-2"></i>
                    </button>

                    <!-- Link Login -->
                    <div class="text-center">
                        <span class="text-muted">Hai già un account? </span>
                        <a asp-controller="ApplicationUser" asp-action="Login"
                           class="text-primary text-decoration-none fw-semibold">Accedi</a>
                    </div>

                    <!-- Copyright -->
                    <div class="text-center mt-4">
                        <small class="text-muted">Dobri Dobrev © 2026 RogHotel Management System.</small>
                    </div>
                </form>

            </div>
        </div>

        <!-- ========== COLONNA DESTRA: IMMAGINE DIVERSA ========== -->
        <div class="col-md-6 position-relative login-image-section">

            <!-- Immagine reception hotel -->
            <div class="login-image"
                 style="background-image: url('https://images.unsplash.com/photo-1564501049412-61c2a3083791?q=80&w=2070');">
            </div>

            <div class="login-overlay"></div>

            <!-- Citazione diversa per la registrazione -->
            <div class="login-quote">
                <h3 class="text-white fw-light mb-3">
                    "Ogni grande team inizia con persone eccezionali. Benvenuto nella famiglia."
                </h3>
                <p class="text-white-50 text-uppercase tracking-wide">
                    Il tuo percorso inizia qui
                </p>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}