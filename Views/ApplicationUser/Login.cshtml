@model RogHotel.Models.Dto.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="login-container">

    <div class="row g-0 h-100">

        <div class="col-md-6 d-flex align-items-center justify-content-center custom-color">
            <div class="login-form-wrapper">

                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-building text-primary fs-3 me-2"></i>
                        <span class="text-muted">Hotel Management System</span>
                    </div>
                    <h2 class="fw-bold mb-2">Accedi al RogHotel</h2>
                    <p class="text-muted">Inserisci le tue credenziali per accedere.</p>
                </div>

                <!-- Form di Login -->
                <form asp-controller="ApplicationUser" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Campo Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope me-1"></i> Email
                        </label>
                        <input asp-for="Email"
                               class="form-control form-control-lg"
                               placeholder="nome.cognome@hotel.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Campo Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">
                            <i class="bi bi-lock me-1"></i> Password
                        </label>
                        <input asp-for="Password"
                               type="password"
                               class="form-control form-control-lg"
                               placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Bottone Accedi -->
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                        Accedi <i class="bi bi-arrow-right ms-2"></i>
                    </button>

                    <!-- Copyright -->
                    <div class="text-center mt-4">
                        <small class="text-muted">Dobri Dobrev © 2026 RogHotel Management System.</small>
                    </div>
                </form>

            </div>
        </div>


        <div class="col-md-6 position-relative login-image-section">

            <!-- Immagine di sfondo -->
            <div class="login-image"
                 style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070');">
            </div>

            <div class="login-overlay"></div>

            <!-- Citazione sovrapposta -->
            <div class="login-quote">
                <h3 class="text-white fw-light mb-3">
                    "L'ospitalità è l'arte di far sentire i tuoi ospiti a casa, anche quando sono lontani."
                </h3>
                <p class="text-white-50 text-uppercase tracking-wide">
                    Eccellenza nell'ospitalità
                </p>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}