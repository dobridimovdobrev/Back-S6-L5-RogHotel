<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RogHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/datatables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- sidebar menu -->
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom p-3">
                <div class="d-flex align-items-center">
                    <div class="sidebar-logo bg-primary text-white rounded d-flex align-items-center justify-content-center me-2">
                        <i class="bi bi-building"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">RogHotel</h5>
                    </div>
                </div>
            </div>

            <div class="list-group list-group-flush">
                <!-- gestione -->
                <div class="sidebar-section-title">GESTIONE</div>

                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>

                <a asp-controller="Prenotazione" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-calendar-check me-2"></i> Prenotazioni
                </a>

                <a asp-controller="Cliente" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-people me-2"></i> Clienti
                </a>

                <a asp-controller="Camera" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-door-open me-2"></i> Camere
                </a>
            </div>

            <!-- user info-->
            <div class="sidebar-user border-top p-3 mt-auto">
                <div class="d-flex align-items-center bg-light rounded-3 p-3">
                    <!-- Icona Sinistra -->
                    <div class="user-avatar bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                        <i class="bi bi-person-fill"></i>
                    </div>

                    <div class="flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <span>Amministratore</span>
                                }
                                else if (User.IsInRole("Dipendente"))
                                {
                                    <span>Dipendente</span>
                                }
                                else
                                {
                                    <span class="fs-6 fw-normal">Ospite</span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="fw-bold text-dark small">Ospite</div>
                            <div class="text-muted" style="font-size: 0.7rem;">Non autenticato</div>
                        }
                    </div>

                    <!-- Logout a Destra -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="ApplicationUser" asp-action="Logout" method="post" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-secondary p-0 border-0" title="Logout">
                                <i class="bi bi-box-arrow-right fs-4"></i>
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom custom-marginTop">
                <div class="container-fluid">
                    <button class="btn btn-link" id="sidebarToggle">
                        <i class="bi bi-list fs-4"></i>
                    </button>

                    <form class="d-flex flex-grow-1 mx-4">
                        <div class="input-group" style="max-width: 500px;">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search"></i>
                            </span>
                            <input class="form-control border-start-0" type="search" placeholder="Cerca prenotazione, camera o cliente..." />
                        </div>
                    </form>
                </div>
            </nav>


            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>