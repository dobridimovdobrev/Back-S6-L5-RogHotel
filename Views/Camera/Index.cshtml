@model List<RogHotel.Models.Entity.Camera>
@{
    ViewData["Title"] = "Gestione Camere";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">Gestione Camere</h2>
                </div>
                <a asp-controller="Camera" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Nuova Camera
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table table-responsive">
                        <table class="table table-hover align-middle mb-0" id="camereTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="px-4 py-3">Numero</th>
                                    <th class="px-4 py-3">Tipo</th>
                                    <th class="px-4 py-3">Prezzo</th>
                                    <th class="px-4 py-3 text-end">Azioni</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* modal *@
<tbody>
    @if (Model != null && Model.Any())
    {
        @foreach (var camera in Model)
        {
            <tr>
                <td class="px-4 py-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-door-open text-warning"></i>
                        </div>
                        <span class="fw-semibold">@camera.Numero</span>
                    </div>
                </td>
                <td class="px-4 py-3">@camera.Tipo</td>
                <td class="px-4 py-3">€ @camera.Prezzo.ToString("N2")</td>
                <td class="px-4 py-3 text-end">
                    <div class="btn-group">
                        <a asp-controller="Camera" asp-action="Edit" asp-route-id="@camera.CameraId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@camera.CameraId">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal@camera.CameraId" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Conferma Eliminazione</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            Sei sicuro di voler eliminare la camera <strong>@camera.Numero</strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                            <form asp-controller="Camera" asp-action="Delete" asp-route-id="@camera.CameraId" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Elimina</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</tbody>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#camereTable').DataTable({
                order: [[0, 'asc']]
            });
        });
    </script>
}